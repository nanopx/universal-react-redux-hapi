{
  "name": "universal-react-redux-hapi",
  "version": "0.0.1",
  "description": "Boilerplate using React, redux and hapi",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanopx/universal-react-redux-hapi.git"
  },
  "homepage": "https://github.com/nanopx/universal-react-redux-hapi",
  "scripts": {
    "start": "NODE_PATH=\"./src\" node ./server",
    "build": "webpack --verbose --colors --display-error-details --config webpack.client.js",
    "watch-client": "webpack --verbose --colors --display-error-details --config webpack.client-watch.js && webpack-dev-server --config webpack.client-watch.js",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start\"",
    "postinstall": "webpack -p --config ./webpack.client.js",
    "test": "mocha --require babel-core/register"
  },
  "author": "nanopx",
  "license": "MIT",
  "dependencies": {
    "babel": "^6.1.18",
    "babel-polyfill": "^6.2.0",
    "babel-runtime": "^6.2.0",
    "h2o2": "^4.0.2",
    "hapi": "^11.1.1",
    "inert": "^3.2.0",
    "isomorphic-fetch": "^2.2.0",
    "normalizr": "^1.4.0",
    "piping": "^0.3.0",
    "radium": "^0.15.3",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-helmet": "^2.2.0",
    "react-redux": "^4.0.0",
    "react-router5": "^1.0.0",
    "react-styling": "^1.4.0",
    "redux": "^3.0.4",
    "redux-actions": "^0.8.0",
    "redux-form": "^3.0.9",
    "redux-promise": "^0.5.0",
    "redux-router5": "^1.0.0",
    "router5": "^1.0.0",
    "router5-history": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-loader": "^6.2.0",
    "babel-plugin-espower": "^2.0.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "concurrently": "^1.0.0",
    "eslint": "^1.9.0",
    "eslint-plugin-react": "^3.9.0",
    "mocha": "^2.3.4",
    "nock": "^3.1.1",
    "power-assert": "^1.2.0",
    "redux-devtools": "^3.0.0-beta-3",
    "redux-devtools-dock-monitor": "^1.0.0-beta-3",
    "redux-devtools-log-monitor": "^1.0.0-beta-3",
    "webpack": "^1.12.6",
    "webpack-dev-server": "^1.12.1",
    "webpack-hot-middleware": "^2.5.0"
  }
}
